extends layout
include ./mixins
append head
  title Galactic Hub Project | System Tag Generator
block content
  body.system
    header
      img(src="assets/logo-ghp.png")
      h1 System Tag Generator
      p Easily generate Galactic Hub compatible tags.
    section#tag-container
      h2#generated-tag
    form
      section#primary 
        h2 Primary Information
        hr
        label(for=region) Region
        select#region
          option(value=1 selected) HUB1: Shungka Void
          option(value=2) HUB2: Waolab Anomaly
          option(value=3) HUB3: Iajukul Cluster
          option(value=4) HUB4: Dizele Void
          option(value=5) HUB5: Ninasoness Mass
          option(value=6) HUB6: Eyrint Fringe
          option(value=7) HUB7: Dadurgh
          option(value=8) HUB8: Marmor Spur
          option(value=9) HUB9: Oaksten Terminus
          option(value=10) HUB10: Aybess Terminus
          option(value=11) HUB11: Dujerad Adjunct
        label(for="index") Solar Index 
        input#index(type="text" name="index" placeholder="012A")
        label(for="name") Name
        input#name(type="text" name="name" placeholder="Un-named System")
        div.group
          input.primary(type="checkbox" id="wealthy" autocomplete="off" value="$")
          label(for="wealthy") Wealthy
        div.group
          input.primary(type="checkbox" id="conflict" autocomplete="off" value="!")
          label(for="conflict") High Conflict
        div.group
          input.primary(type="checkbox" id="exotic" autocomplete="off" value="X")
          label(for="exotic") Exotic Planets
      section#resources
        h2 Notable Resources
        hr
        +resource("rare",   "Aquasphere",     "Aq", "resource-aquasphere.png") 
        +resource("rare",   "Albumen Pearl",  "AP", "resource-albumenpearl.png") 
        +resource("rare",   "Vortex Cube",    "VC", "resource-vortexcube.png")
        +resource("rare",   "Gravitino Ball", "GB", "resource-gravitinoball.png")
        +resource("exotic", "Radnox",         "Ra", "resource-radnox.png")
        +resource("exotic", "Murrine",        "Mu", "resource-murrine.png")
        +resource("exotic", "Omegon",         "Om", "resource-omegon.png")
        +resource("exotic", "Calium",         "Ca", "resource-calium.png")
      section#attractions.features
        h2 Attractions
        hr
        +attraction("Diplos",   "Diplos",   "attraction-diplo.jpg")
        +attraction("Jacks",    "Jacks",    "attraction-jacks.jpg")
        +attraction("Hexagons", "Hexagons", "attraction-hex.jpg")
        +attraction("Shards",   "Shards",   "attraction-shards.jpg")
        +attraction("Loops",    "Loops",    "attraction-loops.jpg")
        +attraction("Bubbles",  "Bubbles",  "attraction-bubbles.jpg")
      section#ships.features
        h2 Notable Ships
        hr
        +attraction("Fighters",  "F.Ships",  "ship-fighter.jpg")
        +attraction("Haulers",   "H.Ships",  "ship-hauler.jpg")
        +attraction("Explorers", "E.Ships",  "ship-explorer.jpg")
        +attraction("Exotics",   "X.Ships",  "ship-exotic.jpg")
        +attraction("Great",     "G.Ships",  "ship-great.jpg")
